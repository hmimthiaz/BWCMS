{% extends "BWCMSBundle:Common:default.html.twig" %}

{% block title %}Site Manager{% endblock %}
{% block pageTitle %}
    <h1>Site Manager</h1>
{% endblock %}

{% block body -%}
<div class="col-md-12">
    <table class="table table-striped table-hover table-bordered records_list">
        <thead>
        <tr>
            <th>Name</th>
            <th>Locale</th>
            <th>Direction</th>
            <th>Slug</th>
            <th>Domain</th>
            <th>Skin</th>
            <th>Isdefault</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>{{ entity.locale }}</td>
                <td>{{ entity.direction }}</td>
                <td>{{ entity.slug }}</td>
                <td>{{ entity.domain }}</td>
                <td>{{ entity.skinFolderName }}</td>
                <td>{{ entity.isDefault }}</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-default btn-sm" href="{{ path('site_edit', {'id': entity.id}) }}">
                            <i class="fa fa-edit"></i> Edit
                        </a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('site_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    </div>
{% endblock %}
